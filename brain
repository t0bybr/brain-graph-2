#!/usr/bin/env python3
"""Brain Graph CLI wrapper - delegates to brain_graph.cli.main."""
from __future__ import annotations

import os
import sys
from pathlib import Path


# Add repo root to path so we can import brain_graph
REPO_ROOT = Path(__file__).resolve().parent
if str(REPO_ROOT) not in sys.path:
    sys.path.insert(0, str(REPO_ROOT))

# Respect BG_PYTHON environment variable for venv selection
if not os.environ.get("BG_PYTHON"):
    venv_python = REPO_ROOT / ".venv" / "bin" / "python"
    if venv_python.exists():
        os.environ["BG_PYTHON"] = venv_python.as_posix()


if __name__ == "__main__":
    from brain_graph.cli.main import main
    raise SystemExit(main())
