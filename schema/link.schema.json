{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://pkms.local/schemas/link.schema.json",
  "title": "Link",
  "description": "Document link (+link:, +image:, +projekt: from SYNTAX.md)",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["link", "image", "projekt", "quelle"],
      "description": "Link type (from SYNTAX.md attribute syntax)"
    },
    "target_id": {
      "type": "string",
      "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$",
      "description": "ULID of target document/image"
    },
    "source_node": {
      "type": ["string", "null"],
      "description": "Node ID where link originates (chunk_*, sec_*), null if document-level"
    },
    "context": {
      "type": ["string", "null"],
      "description": "Surrounding text context for the link"
    },
    "char_offset": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Character offset in full_text where link appears"
    }
  },
  "required": ["type", "target_id"],
  "additionalProperties": false
}
